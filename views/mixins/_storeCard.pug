mixin storeCard(store = {})
  .store
    .store__hero
      .store__actions
        button soon
      img(src=`/uploads/${ store.photo || `store.png` }`, alt="")
      h2.title
        a(href=`/store/${store.slug}`) #{store.name}
    .store__details
      //- we display only the first 25 words of the description
      p= store.description.split(' ').splice(0, 25).join(' ')
      